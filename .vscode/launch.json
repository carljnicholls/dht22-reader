        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "${workspaceRoot}/node_modules/jest/bin/jest.js",
                "--runInBand"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "port": 9229, 
            "smartStep": true, 
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch w/ param server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}\\build\\src\\main.js",
            "args": [ "server" ], 
            "restart": true,
            "smartStep": true, 
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch w/ param script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}\\build\\src\\main.js",
            "args": [ "script", "hello" ], 
            "restart": true,
            "smartStep": true, 
            "console": "integratedTerminal"
        }
    ]
}